    <!-- Search bar -->
    <section id="search-bar" class="text-white" style="background-color:#000;padding:30px">
    <div class="container">
        <form class="form-inline flex-lg-row justify-content-between" method="get">
            <div class="form-group mr-3">
                <label for="genre-select" style="font-weight: 700; font-size: 20px; margin-right: 5px; ">Genre : </label>
                <select name="type"  class="form-control" id="genre-select" style="width: 150px;">
                        <option value="">all</option>

                    {{#each types}}
                        <option value="{{id_type_movie}}">{{type_name_movie}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group mr-3">
                <label for="year-select" style="font-weight: 700; font-size: 20px; margin-right: 5px;">Year :</label>
                <select name="year"  class="form-control" id="year-select" style="width: 150px;">
                    <option value="">All</option>
                </select>
                <script>
                    $(document).ready(function () {
                        var currentYear = new Date().getFullYear();
                        for (var i = currentYear; i >= 1990; i--) {
                            $('#year-select').append($('<option>', {
                                value: i,
                                text: i
                            }));
                        }
                    });
                </script>
            </div>
            <div class="form-group mr-3">
                <label for="country-select" style="font-weight: 700; font-size: 20px; margin-right: 5px;">Country :</label>
                <select name="country" class="form-control" id="country-select" style="width: 150px;">
                    <option value="">All</option>
                    <option value="Korean">Korean</option>
                    <option value="America">America</option>
                    <option value="Japan">Japan</option>
                    <option value="England">England</option>
                    <option value="Vietnamese">Vietnamese</option>
                </select>
            </div>
            <div   class="form-group mr-3">
                <label for="search-text" style="font-weight: 700; font-size: 20px; margin-right: 5px;">Search :</label>
                <input name="search"  type="text" class="form-control" id="search-text" style="width: 200px;">
            </div>
            <button   class="btn btn-success my-2 my-sm-0" type="submit" id="filter-button" style="padding: 7px 28px;">Filter</button>
        </form>
    </div>
</section>

